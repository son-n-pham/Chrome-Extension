{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "Helps you focus and get things done!",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Pomodoro Timer",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "offscreen"
  ],
  "web_accessible_resources": [{
    "resources": [
      "music/*.mp3",
      "songs.json",
      "offscreen.html"
    ],
    "matches": ["<all_urls>"]
  }]
}